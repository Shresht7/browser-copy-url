{
    "manifest_version": 3,
    "name": "Copy Tab URL",
    "version": "1.1",
    "description": "Copy the URL of the current (or selected) tabs.",
    "permissions": [
        "tabs",
        "scripting",
        "offscreen",
        "clipboardWrite"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Copy Tab URL",
        "default_popup": "popup.html"
    },
    "commands": {
        "copy-tab-url": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            },
            "description": "Copy the URL of the current (or selected) tabs"
        },
        "copy-tab-url-md": {
            "suggested_key": {
                "default": "Alt+Shift+M"
            },
            "description": "Copy the URL of the current (or selected) tabs as markdown links"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "64": "assets/icon64.png",
        "12": "assets/icon128.png"
    }
}
